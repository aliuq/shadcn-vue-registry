{
  "name": "shadcn-vue-registry",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.29.1",
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=9.6.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:registry": "pnpm --filter registry dev",
    "build:registry": "pnpm --filter registry build",
    "build:registry:vercel": "pnpm --filter registry build:vercel",
    "prepare": "pnpm simple-git-hooks",
    "lint": "markdownlint . && eslint . && turbo run lint",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.3.0",
    "@types/node": "catalog:",
    "eslint": "^10.0.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "catalog:",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.8.3",
    "typescript": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.md": "markdownlint --fix",
    "*": "eslint --fix"
  }
}
